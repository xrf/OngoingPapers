.PHONY: all build clean deploy

all: ../dist/gh-pages/spEnergiesQD/Manuscript/paper.pdf ../dist/gh-pages/spEnergiesQD/figures.pdf

clean:
	for dir in . Manuscript; do ( cd $${dir} && rm -fr *.aux *.bbl *.blg *.dep *.fdb_latexmk *.fls *.log *.out *Notes.bib; ); done
	rm -fr figures.pdf Manuscript/paper.pdf ../dist/gh-pages/spEnergiesQD/Manuscript/paper.pdf ../dist/gh-pages/spEnergiesQD/figures.pdf

deploy: ../dist/gh-pages/.git/config all
	cd ../dist/gh-pages && \
	git add -A && \
	git commit --amend -q -m Autogenerated && \
	git push -f origin master:gh-pages

../dist/gh-pages/.git/config:
	mkdir -p ../dist/gh-pages
	url=`git remote -v | grep origin | awk '{ printf "%s", $$2; exit }'` && \
	cd ../dist/gh-pages && \
	git init && \
	git config user.name Bot && \
	git config user.email "<>" && \
	git commit -m _ --allow-empty && \
	git remote add origin "$$url"

../dist/gh-pages/spEnergiesQD/figures.pdf: figures.pdf
	mkdir -p $(@D)
	cp figures.pdf $@

../dist/gh-pages/spEnergiesQD/Manuscript/paper.pdf: Manuscript/paper.pdf
	mkdir -p $(@D)
	cp Manuscript/paper.pdf $@

.SUFFIXES: .md .pdf .svg .tex

.svg.pdf:
	svg2pdf $<

.md.tex:
	pandoc -s -V fontsize=12pt -o $@ $<

.md.dep:
	./gen-deps $<

.tex.pdf:
	./mklatex $*

.tex.dep:
	./gen-deps $<

-include figures.dep Manuscript/paper.dep

.SECONDARY:
